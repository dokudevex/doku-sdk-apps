<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">

    <TextView
        android:id="@+id/textView_bottomsheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/dinmedium"
        android:text="Purchase Details"
        android:textColor="#4d4d4d"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_bottomsheet_nametitle"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:text="Name:"
        android:textSize="16sp"
        android:textColor="#1a1a1a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_title" />

    <TextView
        android:id="@+id/textView_bottomsheet_name"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:text="JohnDoe"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_nametitle" />

    <TextView
        android:id="@+id/textView_bottomsheet_emailtitle"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:text="Email:"
        android:textSize="16sp"
        android:textColor="#1a1a1a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_name" />

    <TextView
        android:id="@+id/textView_bottomsheet_email"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:text="JohnDoe@gmail.com"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_emailtitle" />

    <TextView
        android:id="@+id/textView_bottomsheet_phonetitle"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:text="Phone No."
        android:textSize="16sp"
        android:textColor="#1a1a1a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_email" />

    <TextView
        android:id="@+id/textView_bottomsheet_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/dokuregular"
        android:text="+62 812 3456 7890"
        android:textColor="#999999"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_phonetitle" />

    <TextView
        android:id="@+id/textView_bottomsheet_summarytitle"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:text="Summary:"
        android:textSize="16sp"
        android:textColor="#1a1a1a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_phone" />

    <TextView
        android:id="@+id/textView_bottomsheet_summaryone"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/dokuregular"
        android:text="Masker N95     "
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_summarytitle" />

    <TextView
        android:id="@+id/textView_bottomsheet_summarykalione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:layout_marginLeft="60dp"
        android:text="x"
        android:textColor="#999999"
        app:layout_constraintStart_toEndOf="@+id/textView_bottomsheet_summaryone"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_bottomsheet_summaryone"/>

    <TextView
        android:id="@+id/textView_bottomsheet_summarytotone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:layout_marginLeft="40dp"
        android:text="400,000"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintStart_toEndOf="@+id/textView_bottomsheet_summarykalione"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_bottomsheet_summarykalione"/>

    <TextView
        android:id="@+id/textView_bottomsheet_summarytwo"
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/dokuregular"
        android:text="Hand Sanitizer"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomsheet_summarytotone" />

    <TextView
        android:id="@+id/textView_bottomsheet_summarykalitwo"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:layout_marginLeft="60dp"
        android:text="x"
        android:textColor="#999999"
        app:layout_constraintStart_toEndOf="@+id/textView_bottomsheet_summarytwo"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_bottomsheet_summarytwo"/>

    <TextView
        android:id="@+id/textView_bottomsheet_summarytotwo"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dokuregular"
        android:layout_marginLeft="40dp"
        android:text="600,000"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintStart_toEndOf="@+id/textView_bottomsheet_summarykalitwo"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_bottomsheet_summarykalitwo"/>

</androidx.constraintlayout.widget.ConstraintLayout>